<h1>Listing Posts</h1>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
	<% if admin? %>
	<th></th>
	<th></th>
	<% end %>
  </tr>

<% Post.all(:order => 'created_at DESC').each do |post| %>
  <tr>
    <td><%=h post.title %></td>
    <td><%=h post.body %></td>
    <td><%= link_to 'Show', post %></td>
	<% if admin? %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
	<% end %>
  </tr>
<% end %>
</table>

<br />

<% if admin? %>
<%= link_to 'New post', new_post_path %>
<% end %>
<!-- end header -->
<div id="wrapper">
<!-- start page -->
<div id="page">
	<!-- start content -->
	<div id="content">
		<div class="post">
			<h1 class="title">Showing Twitter Trend Searches</h1>
			<div class="entry">
				<table border="1">
				  <tr>
				    <th>Name</th>
				    <th>Search</th>
				    <th>Threshold</th>
				    <th>Resolution</th>
				    <th>Scheduled Update</th>
					<th></th>
					<th></th>
				  </tr>

				<% @twitter_trends.each do |twitter_trend| %>
				  <tr>
				    <td><%=h twitter_trend.name %></td>
				    <td><%=h twitter_trend.search %></td>
				    <td><%=h twitter_trend.threshold %></td>
				    <td><%=h twitter_trend.resolution %></td>
				    <td><%=h twitter_trend.scheduled_update %></td>
				    <td><%= link_to 'Show', twitter_trend %></td>
				    <td><%= link_to 'Destroy', twitter_trend, :confirm => 'Are you sure?', :method => :delete %></td>
				  </tr>
				<% end %>
				</table>

				<br />

				<%= link_to 'Create New Twitter Trend Watch', new_twitter_trend_path %>
			</div>
		</div>
		
	</div>
	<!-- end content -->
	<div style="clear: both;">&nbsp;</div>
</div>
</div>
<!-- end page -->

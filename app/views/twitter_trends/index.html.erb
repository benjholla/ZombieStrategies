<% @twitter_trends.each do |twitter_trend| %>
  <tr>
    <td><%=h twitter_trend.name %></td>
    <td><%=h twitter_trend.search %></td>
    <td><%=h twitter_trend.threshold %></td>
    <td><%=h twitter_trend.resolution %></td>

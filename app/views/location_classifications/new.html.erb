<% content_for :title, "Zombie Strategies | Add Location Classification" %>
<% content_for :meta, "Location classifications help to classify locations in the database." %>
<h1>New Location Classification</h1>

<% form_for(@location_classification) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :icon %><br />
    <%= f.text_field :icon %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', location_classifications_path %>
<% content_for :title, "Guide" %>
<% content_for :meta, "Generate your free personalized zombie preparation guide today." %>
<%= stylesheet_link_tag 'guide/guide' %>
<h1>Personalized Zombie Preparation Guide</h1>
<br />

<div id="url-generator">
	<h2>Enter your location to get started</h2>
	<br />
	<div id="left-content">
		<h3>Search: Address / City / Zip / Etc.</h3>
		<form onsubmit="showAddress(); return false" action="#">
			<input id="search" size="30" type="text" value="" />
			<input type="submit" value="Go!" />
		</form>
		<div id="message-container">
			<div id="message-box-filler">
				<div id="searchresults">
				</div>
			</div>
		</div>
		<br />
		<h3>Home Location Details</h3>
		(used to personalize your zombie preparation guide)
		<br />

		<br />
	    <div id="lat"></div>
	    <div id="lng"></div>
		<br />
		<div id="message-container">
			<div id="message-box-filler">
				<div id="message">
					<b>Determining Location...</b>
				</div>
			</div>
		</div>
		<br />
		<div id="continue-button" style="display:none;">
			<a onmouseover="return handleContinueMouseOver();" onmouseout= "return handleContinueMouseOut();" onmousedown="" onmouseup="showOptions();">
				<img name="continueButton" src="../images/location_map_controls/continue_unselected_button.png" width="136" height="37" alt="Click to continue"/>
			</a>
		</div>
	</div>
	<br />
	<div id="right-content">
		<script type="text/javascript" src="http://www.google.com/jsapi?autoload=%7B%22modules%22%3A%5B%7B%22name%22%3A%22maps%22%2C%22version%22%3A%222%22%7D%5D%7D&amp;key=YOUR_API_KEY">
		</script>
		<script type="text/javascript" src="/javascripts/guide.js"></script>
		<div id="map" style="width: 450px; height: 300px">
			<center>
				<br />
				<br />
				<br />
				<h3>Loading Map...</h3>
				<br />
				<img src="/images/ajax-loader.gif" alt="Please wait..."/>
			</center>
		</div>
		<center><br />Note: We protect your privacy!  Please read our <a href="/privacy_policy" title="Privacy Policy">privacy policy</a>.</center>
	</div>
</div>
<div id="generator-options" style="display:none;">
	<center>
		<h2>Almost done!</h2>
		<div id="options-container">
			<div id="options-container-filler">
				<div id="options-container-buffer">
					<p>Copy and paste link in <b>Email</b> or <b>Instant Message</b>:</p>
					<input id="link" size="50" type="text" value="" readonly="readonly"/>
					<br />
					<br />
					<p><b>Download</b> your personalized zombie preparation guide</p>
					<a onmouseover="return handleDownloadMouseOver();" onmouseout= "return handleDownloadMouseOut();" onmousedown="" onmouseup="downloadPDF();">
						<img name="downloadButton" src="../images/location_map_controls/download_unselected_button.png" width="136" height="37" alt="Download Zombie Preperation Guide"/>
					</a>
					<br />
					<br />
					<br />
					<p><b>Help us spread the word!</b></p>
					<div id="counters">
						<script type="text/javascript">
						tweetmeme_url = 'http://www.zombiestrategies.com/guide';
						</script>
						<script type="text/javascript" src="http://tweetmeme.com/i/scripts/button.js"></script>
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<iframe src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.zombiestrategies.com%2Fguide&amp;layout=box_count&amp;show_faces=false&amp;width=55&amp;action=like&amp;colorscheme=light&amp;height=65" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:55px; height:65px;" allowTransparency="true"></iframe>
					</div>
					<br />
					<a onmouseover="return handleDoneMouseOver();" onmouseout= "return handleDoneMouseOut();" onmousedown="" onmouseup="done();">
						<img name="doneButton" src="../images/location_map_controls/done_unselected_button.png" width="136" height="37" alt="Done Button"/>
					</a>
				</div>
			</div>
		</div>
	</center>
</div>
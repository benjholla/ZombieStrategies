<%= stylesheet_link_tag 'products/products' %>
<div id="left-content">
	<h1>Editing Product</h1>
	<br />
	<% form_for(@product) do |f| %>
		<%= f.error_messages %>
		<h2><%= label_tag 'name', 'Item Name: ' %></h2>
		<%= f.text_field :name %>
		<br />
		<h2><%= label_tag 'category_name', 'Category: ' %></h2>
		<h5><%= text_field_with_auto_complete :product, :category_name, {:size => 30}, {:skip_style => true, :url => formatted_categories_path(:js), :method => :get, :with => "'search=' + element.value"} %></h5>
	</div>
	<div id="right-content">
		<p>
			<%= f.submit 'Update Product' %>
			<br />
			<input type="button" value="Cancel" onclick="window.location.href='<%= products_path %>'"/>
		</p>
	</div>
<% end %>
<% content_for :title, "List Categories | Zombie Strategies" %>
<h1>Listing Categories</h1>

<table border="1">
  <tr>
    <th>Category Name</th>
	<th>Items</th>
	<th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%=h category.name %></td>
	<td>
		<% if category.items.last %>
			<table>
		  	<tr>
		    	<th></th>
		  	</tr>
			<% category.items.each do |item| %>
		  	<tr>
		    	<td><%=h item.name %></td>
		    	<td><%= link_to 'Edit', edit_item_path(item) %></td>
		  	</tr>
			<% end %>
			</table>
		<% end %>
	</td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
  </tr>
<% end %>
</table>

<br />
<% if authorized? %>
<input type="button" value="New Category" onclick="window.location.href='<%= new_category_path %>'"/>
<br />
<input type="button" value="New Item" onclick="window.location.href='<%= new_item_path %>'"/>
<br />
<% end %>
<input type="button" value="Location Map" onclick="window.location.href='<%= locations_path %>'"/>